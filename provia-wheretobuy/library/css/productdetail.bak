@charset "utf-8";
/* CSS Document */

header {
	position:relative;
}

.aside-nav li {
    margin: 0 0 0 -15px;
}

.cnt-article-photo {
	margin:-99px 0 0 -30px;
	overflow:visible;
	}

.cell-right  {
	width:31%;
	border:none;
	padding: 0 0 0 10px;
	float:right;
	}


.cell-left {
	width:65%;
	}

h3 {
	border-bottom:1px solid #666;
	padding-bottom:5px;
	margin-bottom:10px;
	}

h4 {
	border-bottom:1px solid #CCC;
	padding-bottom:5px;
	margin: 0 0 5px;
	font-size:.8em;
	font-weight:bold;
	}
	

.feature-menu li {
	display:inline;
	float:left;
	margin-left:11px;
	}

.feature-menu ul li a {
	width:100px;
	height:8px;
	display:block;
	text-decoration:none;
	color:#fff;
	font-size:11px;
	text-align:center;
	padding-top:97px;
	}

.feature-menu > ul > li:first-child {
    margin: 0 0 0 -1px;
}

.full {
    float: left;
}

article section {
    padding: 30px;
}


ul.product-image-gallery
{
list-style: none;
font-size:12px;
margin:0;
}

ul.product-image-gallery > li.cell
{
float:left;
margin:0 9px 4px 0;
}

a.current {
	color:#000;
	opacity:1;
	margin-left:-10px;
	cursor:default;
	}

.coastal {
	display:block; width:25px; height:25px; position:absolute; margin:-3px; 
	background-image:url(/assets/img/products/coastal-icon.png);
	}